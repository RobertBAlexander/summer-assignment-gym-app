        <label>Trainer </label><div class="field">
        <select name="trainer">
    {{#each user.bookings}}
            <option name="{{trainer}}" value="unspecified"> {{trainer}}</option><br>
    {{/each}}
        </select>
    </div>
    </div>
        <div class="two fields">
            <label>Date</label>
