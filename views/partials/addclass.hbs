<form class="ui stacked segment form" action="/classescreation/addclass " method="POST">
    <h3 class="ui header">Add Class</h3>
    <div class="three fields">
        <div class="field">
            <label>Class Name</label>
            <input placeholder="Class Name" type="text" name="classname">
        </div>
        <div class="field">
            <label>Number of Lessons</label>
            <input placeholder="Number" type="number" step="1" min="1" max="12" name="classnumber" required>
        </div>
        <div class="field">
            <label>Start Date</label>
            <input placeholder="Start Date" type="text" name="startdate">
        </div>
    </div>

    <div class="three fields">
        <div class="field">
            <label>Times</label>
            <input placeholder="From" type="number" step="0.01" min="0" max="24" name="starttime" required>
            <input placeholder="Number" type="number" step="0.01" min="0" max="24" name="endtime" required>
        </div>
        <div class="field">
            <label>Capacity</label>
            <input placeholder="Capacity" type="number" step="1" min="1" max="40" name="capacity">
        </div>
        <div class="field">
            <label>Difficulty Level</label>
            <input placeholder="Difficulty" type="number" step="1" min="1" max="11" name="difficulty">
        </div>
    </div>
    <button class="ui blue submit button">Add Class</button>
</form>