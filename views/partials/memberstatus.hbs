 <header class="ui four column center aligned middle aligned grid segment">
        <div class="ui column">
            <p class="ui user icon header">

                {{#if user.img}}
                    <img class="ui middle aligned circular image" src="{{user.img}}"/><br><br>
                {{else}}
                    <i class="ui yellow user icon"></i>
                {{/if}}

                {{user.firstname}} {{user.lastname}}   <!-- <i class="ui yellow user icon"></i>-->
            </p>
        </div>
        <div class="ui column">
            <p class="ui dashboard icon header">
                <i class="ui {{idealBodyWeight}} dashboard icon"></i>IDEAL WEIGHT INDICATOR
            </p>
        </div>
        <div class="ui column">
            <p class="ui heartbeat icon header">
                <i class="ui red heartbeat icon"></i>{{calculateBMI}} BMI
            </p>
        </div>
        <div class="ui column">
            <p class="ui doctor icon header">
                <i class="ui black doctor icon"></i>{{determineBMICategory}}
            </p>
        </div>


    </header>