

<form class="ui stacked segment form" action="/goalcreation/addGoal" method="POST">
    <h3 class="ui header">Add Goal</h3>
    <div class="field">
        <label>Goal Date</label>
        <input placeholder="Enter Date" type="date" name="goaldate">
    </div>
    <br>
    <div class="two fields">
        <div class="field">
            <label>Weight</label>
            <input placeholder="00.00kg" type="number" name="weight">
        </div>
        <div class="field">
            <label>Above or Below stated weight</label>
            <div class="field">
                <select name="aboveorWeight">
                    <option name="below" value="unspecified"> This weight or less</option><br>
                    <option name="above" value="unspecified"> This weight or more</option><br>
                </select>
            </div>
        </div>
    </div>
    <br>
    <div class="two fields">
        <div class="field">
            <label>Chest</label>
            <input placeholder="00.00cm" type="number" name="chest">
        </div>
        <div class="field">
            <label>Above or Below stated chest size</label>
            <div class="field">
                <select name="aboveorChest">
                    <option name="below" value="unspecified"> This chest size or less</option><br>
                    <option name="above" value="unspecified"> This chest size or more</option><br>
                </select>
            </div>
        </div>
    </div>
    <br>
    <div class="two fields">
        <div class="field">
            <label>Thigh</label>
            <input placeholder="00.00cm" type="number" name="thigh">
        </div>
        <div class="field">
            <label>Above or Below stated weight</label>
            <div class="field">
                <select name="aboveorThigh">
                    <option name="below" value="unspecified"> This thigh size or less</option><br>
                    <option name="above" value="unspecified"> This thigh size or more</option><br>
                </select>
            </div>
        </div>
    </div>
    <br>
    <div class="two fields">
        <div class="field">
            <label>Upper Arm</label>
            <input placeholder="00.00cm" type="number" name="upperArm">
        </div>
        <div class="field">
            <label>Above or Below stated upper arm size</label>
            <div class="field">
                <select name="aboveorArm">
                    <option name="below" value="unspecified"> This upper arm size or less</option><br>
                    <option name="above" value="unspecified"> This upper arm size or more</option><br>
                </select>
            </div>
        </div>
    </div>
    <br>
    <div class="two fields">
        <div class="field">
            <label>Waist</label>
            <input placeholder="00.00cm" type="number" name="waist">
        </div>
        <div class="field">
            <label>Above or Below stated waist size</label>
            <div class="field">
                <select name="aboveorWaist">
                    <option name="below" value="unspecified"> This waist size or less</option><br>
                    <option name="above" value="unspecified"> This waist size or more</option><br>
                </select>
            </div>
        </div>
    </div>
    <br>
    <div class="two fields">
        <div class="field">
            <label>Hips</label>
            <input placeholder="00.00cm" type="number" name="weight">
        </div>
        <div class="field">
            <label>Above or Below stated weight</label>
            <div class="field">
                <select name="aboveorHips">
                    <option name="below" value="unspecified"> This hips size or less</option><br>
                    <option name="above" value="unspecified"> This hips size or more</option><br>
                </select>
            </div>
        </div>
    </div>

    <div class="field">
        <label>Description</label>
        <input placeholder="I'm going to get fitter!" type="text" name="description">
    </div>
    <button class="ui blue submit button">Add Goal</button>
</form>